{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@zsport/api": ["libs/api/src/index.ts"],
            "@zsport/core/authentication/store": ["libs/core/authentication/store/src/index.ts"],
            "@zsport/core/authentication/view": ["libs/core/authentication/view/src/index.ts"],
            "@zsport/core/authorization/data": ["libs/core/authorization/data/src/index.ts"],
            "@zsport/core/i18n": ["libs/core/i18n/src/index.ts"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "preserveWhitespaces": true
    },
    "exclude": ["node_modules", "tmp"]
}
