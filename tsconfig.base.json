{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@zsport/api": ["libs/api/src/index.ts"],
            "@zsport/core/authentication/store": ["libs/core/authentication/store/src/index.ts"],
            "@zsport/core/authentication/view": ["libs/core/authentication/view/src/index.ts"],
            "@zsport/core/authorization/data": ["libs/core/authorization/data/src/index.ts"],
            "@zsport/core/entity-quantity/data": ["libs/core/entity-quantity/data/src/index.ts"],
            "@zsport/core/entity-quantity/store": ["libs/core/entity-quantity/store/src/index.ts"],
            "@zsport/core/entity-quantity/util": ["libs/core/entity-quantity/util/src/index.ts"],
            "@zsport/core/i18n": ["libs/core/i18n/src/index.ts"],
            "@zsport/core/storage/data": ["libs/core/storage/data/src/index.ts"],
            "@zsport/core/storage/util": ["libs/core/storage/util/src/index.ts"],
            "@zsport/domain/user/admin": ["libs/domain/user/admin/src/index.ts"],
            "@zsport/domain/user/data": ["libs/domain/user/data/src/index.ts"],
            "@zsport/domain/user/form": ["libs/domain/user/form/src/index.ts"],
            "@zsport/domain/user/store": ["libs/domain/user/store/src/index.ts"],
            "@zsport/domain/user/table": ["libs/domain/user/table/src/index.ts"],
            "@zsport/ui/dynamic-form": ["libs/ui/dynamic-form/src/index.ts"],
            "@zsport/ui/dynamic-table": ["libs/ui/dynamic-table/src/index.ts"]
        }
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "preserveWhitespaces": true
    },
    "exclude": ["node_modules", "tmp"]
}
